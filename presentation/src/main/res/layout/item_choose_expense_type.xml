<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:clickable="true">

    <ImageView
        android:id="@+id/expense_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"

        android:paddingBottom="10dp"
        tools:src="@drawable/types_of_expence_fuel"/>

    <TextView
        android:id="@+id/expense_name_TextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/expense_ImageView"
        android:paddingStart="11dp"
        android:textColor="@color/mbo_color_black_70"
        android:textSize="18dp"
        tools:text="Fuel"/>

    <View
        android:layout_marginStart="72dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/mbo_color_grey_delimiter_30"/>

</RelativeLayout>