<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mbopartners.mbomobile.ui.activity.joinus.JoinUsActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/mbo_AppBar_white"
        app:popupTheme="@style/mbo_AppBar_PopupMenu_white"
        app:titleTextAppearance="@style/Toolbar.TitleText"/>

    <ProgressBar
        android:id="@+id/mbo_Join_Us_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar" />

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mbo_Join_Us_webView"
        android:layout_gravity="center"
        android:layout_below="@+id/mbo_Join_Us_progressBar"/>

    <View
        android:layout_below="@+id/toolbar"
        android:background="@drawable/bar_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mbo_shadow_height"/>

</RelativeLayout>
