<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mbo_style_layout_shape"
    android:focusableInTouchMode="true"
    tools:context="com.mbopartners.mbomobile.ui.activity.choose_expense_type.ChooseExpenseTypeActivityFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Expense Type"
        android:textSize="24sp"
        android:textColor="@color/mbo_actionbar_textColor_black"
        android:id="@+id/text"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="14dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/text"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
