<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_weekly_time_sheet_of_week_Layout"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingStart="16dp"
    >

    <TextView
        android:id="@+id/day_of_week_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        tools:text="Mon"
        android:textColor="@color/mbo_theme_blue_primary"
        android:background="@drawable/light_blue_shape"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/date_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="May 18"
        android:textSize="18dp"
        android:textColor="@color/company_name"
        android:paddingStart="32dp"
        android:layout_alignBaseline="@+id/day_of_week_TextView"
        android:layout_alignBottom="@+id/day_of_week_TextView"
        android:layout_toEndOf="@+id/day_of_week_TextView" />

    <TextView
        android:id="@+id/sum_hours_on_day_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="6.57"
        android:textSize="18dp"
        android:textColor="@color/company_name"
        android:layout_alignBaseline="@+id/date_TextView"
        android:layout_toStartOf="@+id/mbo_timesheet_totalhours_sign_TextView" />

    <TextView
        android:id="@+id/mbo_timesheet_totalhours_sign_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="16dp"
        android:text="@string/hours_signature"
        android:textSize="18dp"
        android:textColor="@color/company_name"
        android:layout_alignBaseline="@+id/date_TextView"
        android:layout_alignParentEnd="true" />


    <View
        android:id="@+id/devider_line_01"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/mbo_color_grey_delimiter_30"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_marginStart="56dp"/>


</RelativeLayout>