<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mbo_style_layout_shape">


    <TextView
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:layout_marginRight="128dp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/mbo_actionbar_textColor_black"
        android:text="@string/mbo_personalwithholding_payroll_text"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginRight="203dp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/mbo_actionbar_textColor_black"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/textView2"
        android:text="Exemptions/Allowances:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginRight="203dp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/mbo_actionbar_textColor_black"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="48dp"
        android:id="@+id/textView3"
        android:text="Federal: 1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginRight="203dp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/mbo_actionbar_textColor_black"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="48dp"
        android:id="@+id/textView4"
        android:text="VA: 1"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView4"
        android:id="@+id/recyclerView"
        android:layout_marginTop="16dp">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
