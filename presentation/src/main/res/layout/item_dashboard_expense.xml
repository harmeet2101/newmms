<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/mbo_color_white"
        android:foreground="@drawable/ripple_effect"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="2.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/expense_ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:src="@drawable/types_of_expence_fuel"/>

                <TextView
                    android:id="@+id/expense_name_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/expense_ImageView"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:textSize="8dp"
                    tools:text="Expense Name"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dip"
                android:paddingEnd="8dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/vendor_TextView"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingEnd="2dp"
                        android:paddingStart="8dp"
                        android:paddingTop="6dp"
                        android:textColor="@color/mbo_theme_black_primary_dark"
                        android:singleLine="true"
                        android:textSize="22sp"
                        tools:text="United Airlines"
                        android:layout_weight="3.91" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"></View>
                    <TextView
                        android:id="@+id/amount_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/mbo_theme_black_primary_dark"
                        android:paddingEnd="8dp"
                        android:paddingStart="2dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="22sp"
                        android:layout_marginRight="8dp"
                        tools:text="$375"
                        />
                </LinearLayout>


                <TextView
                    android:id="@+id/company_name_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/mbo_theme_black_primary_dark"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:singleLine="true"
                    android:textSize="18sp"
                    tools:text="Hewlett Packard"
                    />

                <TextView
                    android:id="@+id/work_order_name_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/mbo_theme_black_primary_dark"
                    android:maxLines="1"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dip"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp"
                    tools:text="CL-0086-Tanzania market search and development on cloud technologies"
                    />

                <TextView
                    android:id="@+id/work_order_startDate_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_marginTop="6dp"
                    android:paddingBottom="16dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp"
                    tools:text="Start Date"
                    />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>

