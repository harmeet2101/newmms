<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/mbo_color_white"
    android:orientation="horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"></View>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_effect"
        card_view:cardBackgroundColor="@color/mbo_theme_blue_primary"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"

                android:layout_centerInParent="true"
                android:singleLine="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/mbo_save_time"
                android:textColor="@color/mbo_fab_color_white"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:text="@string/mbo_save_time"
        android:textSize="12sp"
        android:textColor="@color/mbo_theme_white_primary"
        android:background="@color/mbo_theme_blue_AppBar_ToolBar"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:visibility="gone"
        android:paddingRight="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/addTime"/>
</LinearLayout>
