<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:id="@+id/relative01"
    android:background="@color/mbo_color_white"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"

            android:text="This Period"
            android:textSize="16sp"
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/textview_thisPeriod"
            android:textColor="@color/mbo_theme_blue_primary"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchbutton"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textview_thisPeriod"
            android:layout_marginLeft="16dp"
            android:checked="false"
            android:theme="@style/SCBSwitch"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/textview_year"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_toRightOf="@+id/switchbutton"
            android:text="Year to Date"
            android:textSize="16sp"
            android:textColor="@color/primary_dark_material_dark"
            android:layout_marginLeft="16dp"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative"
        android:layout_marginLeft="16dp"
        android:text="Statutory"
        android:textStyle="bold"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        android:id="@+id/textview1"
        android:textColor="@color/primary_dark_material_dark"
        android:layout_marginTop="34dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXXXX.XX"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="1"
        android:singleLine="true"
        android:id="@+id/textview1_value"
        android:textColor="@color/primary_dark_material_dark"
        android:layout_alignTop="@+id/textview1"
        android:layout_marginRight="16dp"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:text="Federal Income Tax"
        android:textSize="16sp"
        android:layout_marginRight="155dp"
        android:maxLines="1"
        android:singleLine="true"
        android:id="@+id/textview2"
        android:textColor="@color/primary_dark_material_dark"
        android:layout_marginTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX.XX"
        android:textSize="16sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:singleLine="true"
        android:id="@+id/textview2_value"
        android:textColor="@color/primary_dark_material_dark"
        android:layout_alignTop="@+id/textview2"
        android:layout_marginRight="16dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview2"
        android:layout_marginLeft="16dp"
        android:text="Other"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_marginBottom="20dp"
        android:singleLine="true"
        android:id="@+id/textview3"
        android:textColor="@color/primary_dark_material_dark"
        android:layout_marginTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXXXX.XX"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="1"
        android:singleLine="true"
        android:id="@+id/textview3_value"
        android:textColor="@color/primary_dark_material_dark"
        android:layout_alignTop="@+id/textview3"
        android:layout_marginRight="16dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
