<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mbo_color_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="09/11/2015"
        android:layout_marginLeft="16dp"
        android:id="@+id/dateTextview"/>

    <TextView
        android:layout_width="261dp"
        android:layout_height="24dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/dateTextview"
        android:text="Reimbersment to Cap One 5678,Savings"
        android:textSize="18sp"
        android:maxLines="1"
        android:textColor="@color/primary_dark_material_dark"
        android:layout_marginLeft="16dp"
        android:id="@+id/paymentTextview"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/worktracking_ic_right"
        android:layout_below="@+id/dateTextview"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/loopImageView"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/paymentTextview"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_loop_black_24dp"/>

    <TextView
        android:layout_width="261dp"
        android:layout_height="24dp"
        android:layout_below="@+id/paymentTextview"
        android:layout_toRightOf="@+id/loopImageView"
        android:layout_marginTop="10dp"
        android:id="@+id/amount"
        android:layout_marginLeft="6dp"
        android:textColor="@color/primary_dark_material_dark"
        android:textSize="16sp"
        android:text="$2,450"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/divider"
        android:layout_below="@+id/loopImageView"
        android:background="@color/mbo_color_grey_delimiter_30"></View>
</RelativeLayout>
