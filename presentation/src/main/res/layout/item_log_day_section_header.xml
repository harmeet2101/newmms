<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/section_label_TextView"
              android:paddingEnd="@dimen/log_time_border_padding"
              android:paddingStart="60dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="start"
              android:paddingTop="24dp"
              android:text="Notes"
              android:textColor="@color/company_name"
              android:textSize="18dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/image"
        android:src="@drawable/notes_mdpi" />
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/mbo_color_grey_delimiter_30"/>-->

</FrameLayout>