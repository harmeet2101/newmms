<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="mbo_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="colorPrimaryDark">@color/mbo_theme_black_primary_dark</item>
    </style>

    <style name="mbo_AppThemeGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mbo_theme_blue_primary</item>
        <item name="colorPrimaryDark">@color/mbo_theme_black_primary_dark</item>
        <item name="colorAccent">@color/mbo_theme_green_colorAccent</item>
        <item name="android:windowBackground">@color/mbo_theme_green_android_windowBackground</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <!-- Read : -->
    <!-- http://www.murrayc.com/permalink/2014/10/28/android-changing-the-toolbars-text-color-and-overflow-icon-color/ -->
    <!-- Grey theme elements -->
    <style name="mbo_AppTheme_grey" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/mbo_theme_blue_AppBar_ToolBar</item>
        <item name="android:textColor">@color/mbo_theme_grey_TextView_text_color</item>
        <item name="colorPrimaryDark">@color/mbo_theme_black_primary_dark</item>
        <item name="textAllCaps">false</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>
    <style name="mbo_AppTheme_grey_dasboard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/mbo_theme_blue_AppBar_ToolBar</item>

        <item name="colorPrimaryDark">@color/mbo_theme_black_primary_dark</item>
        <item name="textAllCaps">false</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="mbo_AppTheme_blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/mbo_theme_blue_AppBar_ToolBar</item>
        <item name="textAllCaps">false</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="colorPrimaryDark">@color/mbo_theme_black_primary_dark</item>
        <item name="colorPrimary">@color/mbo_theme_blue_primary</item>

    </style>

    <style name="mbo_AppTheme_blue_choose_project" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/mbo_theme_blue_AppBar_ToolBar</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/mbo_color_white</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="colorPrimaryDark">@color/mbo_color_white</item>
        <item name="colorPrimary">@color/mbo_theme_blue_primary</item>

    </style>

    <style name="mbo_AppBar_grey" parent="Theme.AppCompat.NoActionBar">
        <!-- android:textColorSecondary is the color of the menu
             overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">?colorAccent</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
        which is used to tint widgets -->
        <item name="colorAccent">@color/mbo_theme_grey_accent</item>
    </style>

    <style name="mbo_AppBar_PopupMenu_grey" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/mbo_theme_grey_PopupMenu_text_color</item>
        <item name="android:colorBackground">@color/mbo_theme_grey_android_colorBackground</item>
    </style>
    <!-- END OF Grey theme elements -->

    <!-- -->
    <!-- White theme elements -->
    <style name="mbo_AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mbo_theme_white_primary</item>
        <item name="android:windowBackground">@color/mbo_theme_white_android_windowBackground</item>
        <item name="android:textColor">@color/mbo_theme_white_TextView_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="mbo_AppBar_white" parent="Theme.AppCompat.NoActionBar">
        <!-- android:textColorPrimary is the  color of the title text
            in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:textColorPrimary">?colorAccent</item>

        <!-- android:textColorSecondary is the color of the menu
            overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">?colorAccent</item>

        <!-- colorPrimary is used, for instance, for the default ActionBar
            (but not Toolbar) background.-->
        <item name="colorPrimary">@color/mbo_theme_white_primary</item>

        <!-- colorPrimaryDark is used for the status bar (with the
             battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/mbo_theme_white_primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
        which is used to tint widgets -->
        <item name="colorAccent">@color/mbo_theme_white_accent</item>
    </style>

    <style name="mbo_AppBar_PopupMenu_white" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/mbo_theme_white_PopupMenu_text_color</item>
        <item name="android:colorBackground">@color/mbo_theme_white_android_colorBackground</item>
    </style>
    <!-- END OF White theme elements -->

